<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:id="@+id/rl_par"
       android:layout_width="match_parent"
       android:gravity="center"
       android:layout_height="200dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/iv_subtract"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/btn_home_subtract"/>
           <TextView
               android:id="@+id/tv_par"
               android:layout_width="120dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="PAR"
               android:textSize="48sp"
               android:textColor="@color/colorGray9"/>
           <ImageView
               android:id="@+id/iv_add"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/btn_home_add"/>
       </LinearLayout>
   </RelativeLayout>
   <include layout="@layout/item_horizontal_line2"/>
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_text42"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="14sp"
            android:textColor="@color/primaryColor"/>
        <RadioGroup
            android:id="@+id/rg_fairway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_fairway_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text47"
                android:textSize="15sp"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_fairway_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text48"
                android:textSize="15sp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
        </RadioGroup>
    </RelativeLayout>
    <include layout="@layout/item_horizontal_line2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_text43"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="14sp"
            android:textColor="@color/primaryColor"/>
        <RadioGroup
            android:id="@+id/rg_upgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_upgreen_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text47"
                android:textSize="15sp"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_upgreen_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text48"
                android:textSize="15sp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
        </RadioGroup>
    </RelativeLayout>
    <include layout="@layout/item_horizontal_line2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_text44"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="14sp"
            android:textColor="@color/primaryColor"/>
        <RadioGroup
            android:id="@+id/rg_followball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_followball_noappear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text46"
                android:textSize="15sp"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_followball_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text47"
                android:textSize="15sp"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_followball_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text48"
                android:textSize="15sp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
        </RadioGroup>
    </RelativeLayout>
    <include layout="@layout/item_horizontal_line2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_text45"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="14sp"
            android:textColor="@color/primaryColor"/>
        <RadioGroup
            android:id="@+id/rg_bunkers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_bunkers_noappear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text46"
                android:textSize="15sp"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_bunkers_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text47"
                android:textSize="15sp"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_bunkers_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text48"
                android:textSize="15sp"
                android:textColor="@drawable/selector_tv_tvcolor"
                android:background="@drawable/selector_rg_test"
                android:button="@null"/>
        </RadioGroup>
    </RelativeLayout>
    <include layout="@layout/item_horizontal_line2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_end"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"
            android:text="@string/home_text49"
            android:textSize="12sp"
            android:textColor="@color/colorOrange"/>
    </RelativeLayout>
</LinearLayout>