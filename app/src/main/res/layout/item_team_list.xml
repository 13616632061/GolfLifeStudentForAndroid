<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_team_pic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_appointment" />

        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_team_pic"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="丰顺高尔夫球队(21人)"
            android:textColor="@color/colorBlack3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_team_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_team_name"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_team_address"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="深圳"
            android:textColor="@color/colorBlack3"
            android:textSize="13sp" />

        <!--<TextView-->
        <!--android:id="@+id/tv_team_introduction"-->
        <!--android:layout_width="220dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignLeft="@id/tv_team_name"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:ellipsize="end"-->
        <!--android:singleLine="true"-->
        <!--android:text="不抛弃，不放弃"-->
        <!--android:textColor="@color/colorBlack3"-->
        <!--android:textSize="13sp" />-->

        <TextView
            android:id="@+id/tv_team_dui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:drawableLeft="@drawable/icon_team_dui"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="队长"
            android:textColor="@color/colorBlack3" />
    </RelativeLayout>
</LinearLayout>