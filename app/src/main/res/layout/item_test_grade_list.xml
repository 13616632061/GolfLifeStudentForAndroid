<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_overall"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left_side"
            android:layout_width="6dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_tv_orangetest"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape_layout_test">
            <TextView
                android:id="@+id/tv_success_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_left"
                android:layout_marginLeft="5dp"
                android:text="开球上球道成功率"
                android:textSize="15sp"
                android:textColor="@color/primaryColor"/>
            <TextView
                android:id="@+id/tv_percentage_number"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_success_rate"
                android:gravity="right"
                android:text="33"
                android:textSize="44sp"
                android:textColor="@color/colorOrange"/>
            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_percentage_number"
                android:layout_alignBaseline="@+id/tv_percentage_number"
                android:text="%"
                android:textSize="15sp"
                android:textColor="@color/colorOrange"/>
            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:text="破百"
                        android:textSize="12sp"
                        android:textColor="@color/colorGray"/>
                    <TextView
                        android:id="@+id/tv_hundred"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="10%"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:text="破九"
                        android:textSize="12sp"
                        android:textColor="@color/colorGray"/>
                    <TextView
                        android:id="@+id/tv_nine"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="10%"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:text="破八"
                        android:textSize="12sp"
                        android:textColor="@color/colorGray"/>
                    <TextView
                        android:id="@+id/tv_eight"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="10%"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>