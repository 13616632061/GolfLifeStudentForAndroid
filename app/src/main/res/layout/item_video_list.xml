<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <ImageView
        android:id="@+id/video_lv_iv"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/pic_placeholder"/>
    <TextView
        android:id="@+id/video_lv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_lv_iv"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/video_lv_iv"
        android:text="标题"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/primaryColor"/>
    <TextView
        android:id="@+id/video_lv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/video_lv_iv"
        android:layout_below="@+id/video_lv_title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorGray"/>
</RelativeLayout>