<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.glorystudent.widget.ScaleFrameLayout
        android:id="@+id/scale_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/video_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.glorystudent.widget.DrawDesignView
            android:id="@+id/dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.glorystudent.widget.ScaleFrameLayout>

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="105dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_btn_vcr_delete" />

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_btn_vcr_return" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="105dp">

        <ImageView
            android:id="@+id/iv_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_btn_vcr_pen" />

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_packup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_vcr_packup" />

            <RadioGroup
                android:id="@+id/rg_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_vcr_line"
                    android:button="@null"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_vcr_cricle"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/rb_angle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_vcr_angle"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/rb_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_vcr_arrow"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/rb_curve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_vcr_sline"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/rb_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_vcr_rectangle"
                    android:button="@null" />
            </RadioGroup>

            <ImageView
                android:id="@+id/iv_pen_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_vcr_yellow" />
        </LinearLayout>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_right"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/rl_right"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_vcr_yellow"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_vcr_red"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_vcr_green"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_vcr_blue"
            android:button="@null" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rl_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAlphaBlack2">

        <CheckBox
            android:id="@+id/cb_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_cb_rec"
            android:button="@null" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="10dp"
            android:src="@drawable/nav_share_big" />

        <ImageView
            android:id="@+id/contrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:padding="10dp"
            android:src="@drawable/btn_video_vs" />

        <ImageView
            android:id="@+id/oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/cb_rec"
            android:src="@drawable/oval"
            android:visibility="gone" />

        <Chronometer
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:format="%s"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_vrc_close_video"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/timer"
            android:layout_toEndOf="@+id/timer" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAlphaBlack2">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_play_speed"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="1/1"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_btn_vcr_play"
                android:button="@null"
                android:padding="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.glorystudent.widget.NumberSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <com.glorystudent.widget.ScaleLineView
                android:id="@+id/scale_line"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>