<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/competition_lv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_home_position"
        android:drawablePadding="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="12dp"
        android:text="地点"
        android:textSize="12sp"
        android:textColor="@color/colorGray"/>
    <include layout="@layout/item_horizontal_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/competition_lv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_lv_ll"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="50dp"
            android:text="赛事名称"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/primaryColor"/>
        <LinearLayout
            android:id="@+id/iv_lv_ll"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/competition_lv_iv"
                android:layout_width="115dp"
                android:layout_height="76dp"
                android:src="@drawable/pic_placeholder"/>
            <TextView
                android:id="@+id/competition_lv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_home_time"
                android:drawablePadding="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="00/00-12/10"
                android:textSize="12sp"
                android:textColor="@color/primaryColor"/>
        </LinearLayout>

        <TextView
            android:id="@+id/competition_lv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在进行中"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorOrange"/>
    </RelativeLayout>
</LinearLayout>