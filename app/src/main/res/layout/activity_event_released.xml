<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:text="@string/released_text2"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:src="@drawable/back_white" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/iv_released_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/competition_banner_1" />

                <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cb_released_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:canLoop="true" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_released_add_image"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginRight="24dp"
                        android:src="@drawable/btn_issue_add" />
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_name"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text3"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_released_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:hint="@string/released_text4"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/primaryColor"
                    android:textColorHint="@color/colorGray9"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_time"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text5"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_begin_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:background="@color/colorGray7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="42dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text6"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:background="@color/colorGray7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="42dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text7"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_kickoff_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_released_event_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_address"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text8"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_event_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_money"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text9"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_cost_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:text="免费"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_released_event_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGray7" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="42dp"
                            android:paddingTop="15dp"
                            android:text="@string/released_text15"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_released_event_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="@string/released_text20"
                            android:inputType="numberDecimal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/colorGray9"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_released_lineup_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGray7" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="42dp"
                            android:paddingTop="15dp"
                            android:text="@string/released_text16"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_released_lineup_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="@string/released_text20"
                            android:inputType="numberDecimal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/colorGray9"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_user"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text10"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_released_people_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/released_text11"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/primaryColor"
                    android:textColorHint="@color/colorGray9"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_guests"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text12"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_guest_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:text="不允许"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/ll_released_guest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGray7" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="42dp"
                            android:paddingTop="15dp"
                            android:text="@string/released_text17"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_released_guest_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="@string/released_text20"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/colorGray9"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGray7" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_released_guest_cost_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="42dp"
                            android:paddingTop="15dp"
                            android:text="@string/released_text18"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_released_guest_cost_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:gravity="right"
                            android:text="免费"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_released_guest_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:background="@color/colorGray7" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="15dp"
                                    android:paddingLeft="42dp"
                                    android:paddingTop="15dp"
                                    android:text="@string/released_text19"
                                    android:textColor="@color/primaryColor"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/et_released_guest_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="12dp"
                                    android:background="@null"
                                    android:gravity="right"
                                    android:hint="@string/released_text20"
                                    android:inputType="numberDecimal"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:singleLine="true"
                                    android:textColor="@color/primaryColor"
                                    android:textColorHint="@color/colorGray9"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_released_guest_lineup_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:background="@color/colorGray7" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="15dp"
                                    android:paddingLeft="42dp"
                                    android:paddingTop="15dp"
                                    android:text="@string/released_text16"
                                    android:textColor="@color/primaryColor"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/et_released_guest_lineup_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="12dp"
                                    android:background="@null"
                                    android:gravity="right"
                                    android:hint="@string/released_text20"
                                    android:inputType="numberDecimal"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:singleLine="true"
                                    android:textColor="@color/primaryColor"
                                    android:textColorHint="@color/colorGray9"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_eye"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text13"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_released_password_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_released_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGray7" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="42dp"
                            android:paddingTop="15dp"
                            android:text="@string/released_text21"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_released_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="@string/released_text20"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/colorGray9"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_my_competition_phone"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text14"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_released_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/released_text20"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/primaryColor"
                    android:textColorHint="@color/colorGray9"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_issue_write"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="@string/released_text43"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp" />

                <com.glorystudent.golflibrary.widget.labelgridview.LabelGridView
                    android:id="@+id/gv_released_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="5dp"
                    android:numColumns="4"
                    android:paddingBottom="18dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:verticalSpacing="5dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_released_event_info"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:focusable="false"
                android:gravity="left"
                android:hint="@string/released_text22"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/colorGray9"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_released_agree"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_btn_agree"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_text5"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_released_service_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_text6"
                    android:textColor="@color/colorOrange"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/released_text45"
                        android:textColor="@color/colorOrange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_released_service_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/released_text26"
                        android:textColor="@color/colorOrange"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_released_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/released_text23"
                android:textColor="@color/colorOrange"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_released_preview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/released_text24"
                android:textColor="@color/colorOrange"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_released_release"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_login"
            android:gravity="center"
            android:text="@string/released_text25"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>